{
  "name": "temp-shelf",
  "version": "1.2.0",
  "description": "File management with Drag-and-Drop functionality",
  "main": "main.js",
  "type": "module",
  "bin": {
    "temp-shelf": "bin/temp-shelf.js"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "fix": "prettier --write . && eslint --fix .",
    "lint": "prettier --check . && eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazuma-naka/temp-shelf.git"
  },
  "keywords": [
    "file"
  ],
  "author": "Kazuma Naka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazuma-naka/temp-shelf/issues"
  },
  "homepage": "https://github.com/kazuma-naka/temp-shelf#readme",
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "electron": "^30.5.1",
    "electron-builder": "^25.0.5",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "prettier": "3.3.3"
  },
  "build": {
    "appId": "com.kazumaproject.tempshelf",
    "productName": "temp-shelf",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "preload.js",
      "main.js",
      "dist/**/*",
      "renderer.js",
      "index.html",
      "IconMapping.js",
      "File.js",
      "bin/",
      "icons/",
      "img/",
      "style.css",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "kazuma-naka",
      "repo": "temp-shelf",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "img/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "img/logo.ico"
    }
  }
}
